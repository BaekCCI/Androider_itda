<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/imgSetting"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/noticewindow"
        android:backgroundTint="#B3FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:background="@drawable/noticewindow"
        android:backgroundTint="#D9FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="뒤로 가기"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintEnd_toEndOf="@id/back"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/imgSetting"
        app:layout_constraintBottom_toBottomOf="@id/imgSetting"
        app:layout_constraintStart_toStartOf="@id/imgSetting"
        app:layout_constraintEnd_toEndOf="@id/imgSetting">

        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="프로필 설정"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:text="갤러리에서 사진 선택"
            android:textSize="20dp"
            android:textColor="#0e6d62"/>

        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:text="사진 찍기"
            android:textSize="20dp"
            android:textColor="#0e6d62"/>

        <Button
            android:id="@+id/defaultImg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:text="기본 이미지로 변경"
            android:textSize="20dp"
            android:textColor="#0e6d62"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/noticeLogoutCheck"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:background="@drawable/noticewindow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/noticeLogoutCheckMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="로그아웃 하시겠습니까?"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/noticeLogoutCheck"
        app:layout_constraintStart_toStartOf="@+id/noticeLogoutCheck"
        app:layout_constraintTop_toTopOf="@id/noticeLogoutCheck"
        />

    <Button
        android:id="@+id/yesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btnshape_green"
        android:text="예"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/noticeLogoutCheck"
        app:layout_constraintEnd_toStartOf="@id/noBtn"
        app:layout_constraintStart_toStartOf="@id/noticeLogoutCheck" />

    <Button
        android:id="@+id/noBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btnshape_gray"
        android:text="아니오"
        app:layout_constraintBottom_toBottomOf="@id/noticeLogoutCheck"
        app:layout_constraintEnd_toEndOf="@id/noticeLogoutCheck"
        app:layout_constraintStart_toEndOf="@id/yesBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
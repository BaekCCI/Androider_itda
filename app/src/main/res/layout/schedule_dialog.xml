<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/noticeLogoutCheck"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:background="@drawable/noticewindow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/noticeLogoutCheckMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="저장되었습니다."
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/noticeLogoutCheck"
        app:layout_constraintEnd_toEndOf="@id/noticeLogoutCheck"
        app:layout_constraintStart_toStartOf="@+id/noticeLogoutCheck"
        app:layout_constraintTop_toTopOf="@id/noticeLogoutCheck"
        />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/white"
        android:background="@drawable/btnshape_green"
        app:layout_constraintTop_toBottomOf="@id/noticeLogoutCheckMsg"
        app:layout_constraintStart_toStartOf="@id/noticeLogoutCheck"
        app:layout_constraintEnd_toEndOf="@id/noticeLogoutCheck"
        app:layout_constraintBottom_toBottomOf="@id/noticeLogoutCheck"
        />

</androidx.constraintlayout.widget.ConstraintLayout>